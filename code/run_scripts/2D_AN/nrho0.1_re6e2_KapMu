#PBS -S /bin/bash
#PBS -N AN_thermal_KapMu_nrho0.1_Re6e2
#PBS -l select=5:ncpus=28:mpiprocs=28:model=bro
#PBS -l walltime=2:00:00
#PBS -j oe
#PBS -q normal

cd $PBS_O_WORKDIR

NRHO=0.1
RE=6e2

date
mpiexec_mpt -n 128 ~/.python3 AN_2D_thermal.py \
    --nr=128 \
    --nz=512 \
    --n_rho=$NRHO \
    --wall_hours=1.7 \
    --Reynolds=$RE \
    --aspect=0.25 \
    --run_time_buoy=11 \
    --safety=0.15 \
    --rk443 \
    > ./out.AN_thermal_2D.Re$RE.nrho$NRHO.$PBS_JOBID
date

