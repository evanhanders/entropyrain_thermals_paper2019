#PBS -S /bin/bash
#PBS -N AN_thermal_KapMu_nrho5_Re6e2
#PBS -l select=19:ncpus=28:mpiprocs=28:model=bro
#PBS -l walltime=16:00:00
#PBS -j oe
#PBS -q long

cd $PBS_O_WORKDIR

NRHO=5
RE=6e2

date
mpiexec_mpt -n 512 ~/.python3 AN_2D_thermal.py \
    --nr=1024 \
    --nz=1024 \
    --n_rho=$NRHO \
    --wall_hours=15.5 \
    --Reynolds=$RE \
    --aspect=0.12 \
    --run_time_buoy=3 \
    --out_cadence=0.05 \
    --rk443 \
    --safety=0.025 \
    --restart=AN_2D_thermal_nrho5_Re6e2_Pr1_aspect0.12_Lz20/final_checkpoint/final_checkpoint_s1.h5 \
    --label=restarted \
    > ./out.AN_thermal_2D.Re$RE.nrho$NRHO.$PBS_JOBID
date

